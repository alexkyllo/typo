<% className = form_action.delete(:class) %>
<%= form_tag(form_action, :id => "#{form_type}_form", :enctype => "multipart/form-data", :class => className) do %>

  <%= render :partial => "form" %>


<% end %>
<%unless (params[:action] == "new" || current_user.name != 'admin')%>
<h4>Merge Articles</h4>
<%= form_tag({:controller => "admin/content", :action => "merge", :id => params[:id]}, :method => "put", :class => 'article') do %>
  
  <%= label_tag(:merge_with, "Article ID") %>
  <%= text_field_tag(:merge_with) %>
  <!--<%= hidden_field_tag :id, params[:id] %>-->
  <%= submit_tag("Merge") %>
<% end %>  
<% end %>
